{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",

    "moduleResolution": "Node",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true,

    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["**/*.ts"], // adjust this to the directory where your TypeScript files are located
  "exclude": ["node_modules"]
}
