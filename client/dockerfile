# Start from the Node.js base image
FROM node:18

# Set the working directory in the container
WORKDIR /client

# Install serve to serve your static files
RUN npm install -g serve

# Copy the package.json and package-lock.json
COPY package*.json ./

# Install only production dependencies
RUN npm install --only=production

# Copy the pre-built JavaScript files and other necessary assets into the image
COPY build/ ./build/
COPY index.html ./
COPY css/ ./css/
COPY assets/ ./assets/


# Expose the port that 'serve' will listen on
EXPOSE 8080

# Start the server using 'serve'
CMD ["serve", "-s", "build"]
