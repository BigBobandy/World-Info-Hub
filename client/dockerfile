# Use the Node.js base image
FROM node:18

# Set the working directory in the container
WORKDIR /client

# Copy the package.json and package-lock.json
COPY package*.json ./

# Install dependencies (serve is included)
RUN npm install --legacy-peer-deps --omit=dev

# Copy the pre-built JavaScript files and static assets into the container
COPY build/ ./build/

# Expose the port that 'serve' will listen on
EXPOSE 8080

# Start the server using the locally installed 'serve'
CMD ["serve", "-s", "build"]
