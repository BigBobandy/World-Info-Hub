FROM node:18

WORKDIR /client

COPY package*.json ./

RUN npm install -g typescript

RUN npm install --legacy-peer-deps

# Copy source files
COPY . .

RUN chmod -R 777 /client

# Build TypeScript files
RUN npm run build

# Expose the port that 'serve' will listen on
EXPOSE 8080

# Start the server using 'serve'
CMD ["npm", "start"]